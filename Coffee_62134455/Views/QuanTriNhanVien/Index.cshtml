
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutQuanTri.cshtml";
}

@using Coffee.Models.DtoEdit;

@using PagedList.Mvc;
@model PagedList.IPagedList<Coffee.Models.TaiKhoans>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/Assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assets/css/css/font.awesome.css" rel="stylesheet" />
    <style>
        body {
            color: #566787;
            background: #f5f5f5;
            font-family: 'Roboto', sans-serif;
        }

        .btn {
            border-radius: 30px !important;
            padding: 3px 10px !important;
        }

        .table-responsive {
            margin: 30px 0;
        }

        .table-wrapper {
            min-width: 1000px;
            background: #fff;
            padding: 20px;
            box-shadow: 0 1px 1px rgba(0,0,0,.05);
        }

        .table-title {
            padding-bottom: 10px;
            margin: 0 0 10px;
            min-width: 100%;
        }

            .table-title h2 {
                margin: 8px 0 0;
                font-size: 22px;
            }

        .search-box {
            position: relative;
            float: right;
        }

            .search-box input {
                height: 34px;
                border-radius: 20px;
                padding-left: 35px;
                border-color: #ddd;
                box-shadow: none;
            }

                .search-box input:focus {
                    border-color: #3FBAE4;
                }

            .search-box i {
                color: #a0a5b1;
                position: absolute;
                font-size: 19px;
                top: 8px;
                left: 10px;
            }

        table.table tr th, table.table tr td {
            border-color: #e9e9e9;
        }

        table.table-striped tbody tr:nth-of-type(odd) {
            background-color: #fcfcfc;
        }

        table.table-striped.table-hover tbody tr:hover {
            background: #f5f5f5;
        }

        table.table th i {
            font-size: 13px;
            margin: 0 5px;
            cursor: pointer;
        }

        table.table td:last-child {
            width: 130px;
        }

        table.table td a {
            color: #a0a5b1;
            display: inline-block;
            margin: 0 5px;
        }

            table.table td a.view {
                color: #03A9F4;
            }

            table.table td a.edit {
                color: #FFC107;
            }

            table.table td a.delete {
                color: #E34724;
            }

        table.table td i {
            font-size: 19px;
        }

        .pagination {
            float: right;
            margin: 0 0 5px;
        }

            .pagination li a {
                border: none;
                font-size: 95%;
                width: 30px;
                height: 30px;
                color: #999;
                margin: 0 2px;
                line-height: 30px;
                border-radius: 30px !important;
                text-align: center;
                padding: 10px 12px;

            }

                .pagination li a:hover {
                    color: #666;
                }

            .pagination li.active a {
                background: #03A9F4;
            }

                .pagination li.active a:hover {
                    background: #0397d6;
                }

            .pagination li.disabled i {
                color: #ccc;
            }

            .pagination li i {
                font-size: 16px;
                padding-top: 6px
            }

        .hint-text {
            float: left;
            margin-top: 6px;
            font-size: 95%;
        }
    </style>
    <script>
        $(document).ready(function () {

            $('.btn-add-nhanvien').click(function (e) {
                e.preventDefault()
                $.get("/QuanTriNhanVien/ThemNhanVien", function (html) {
                    openModal("Thêm người dùng", html, "frm-them-nhan-vien", "Thêm mới");
                })
            })

            $(document).on('click', '.btn-submit', function () {
                $(this).prop('disabled', true);
                $.post("/QuanTriNhanVien/ThemNhanVien", $('#modal form').serialize(), function (res) {
                    ToastMessage("Thêm mới nhân viên thành công");
                    setTimeout(() => {
                        location.href = "/QuanTriNhanVien/Index";
                    }, 300)
                })
            })

            $('.delete').click(function (e) {
                e.preventDefault();
                var id = $(this).data('id');
                var product_item = $(this); //Lấy nút xóa của dòng đó
                $.confirm({
                    title: 'Thông báo',
                    content: 'Xóa người dùng?',
                    buttons: {
                        Đóng: function () {

                        },
                        Xóa: {
                            text: 'Xóa',
                            action: function () {
                                $.post("/QuanTriNhanVien/XoanguoiDung", { id: id }, function (res) {
                                    ToastMessage(res.message);
                                    setTimeout(() => {
                                        location.href = "/QuanTriNhanVien/Index";
                                    }, 300)
                                })
                            }
                        }
                    }
                });
            })



        })
    </script>
</head>
<body>

    @using (Html.BeginForm())
    {
        <div class="container-xl">
            <div class="table-responsive">
                <div class="table-wrapper">
                    <div class="table-title">
                        <div class="">
                            <div class="form-group"><h1>Danh sách nhân viên</h1></div>
                            <div>
                                <div>
                                    <button type="submit" class="btn btn-info position-relative float-right ml-2 btn-search">Tìm kiếm</button>
                                    <div class="search-box">
                                        <i class="icon icon-search"></i>
                                        <input type="text" class="form-control" name="search" value="@ViewBag.search" placeholder="Tìm kiếm">
                                    </div>
                                </div>
                                <div>
                                    <button class="btn btn-info btn-add-nhanvien"><i class="icon icon-plus"></i> Thêm</button>
                                </div>
                            </div>


                        </div>
                    </div>
                    <table class="table table-striped table-hover table-bordered">
                        <thead>
                            <tr>
                                <th>Nhân viên</th>
                                <th>Tài khoản</th>
                                <th>Loại tài khoản</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr class="row_item">
                                    <td>@item.TenNguoiDung</td>
                                    <td>@item.Username</td>
                                    @if (item.VaiTro == (int)VaiTro.NhanVien)
                                    {
                                        <td>Nhân viên</td>
                                    }
                                    else
                                    {
                                        <td>Quản lý</td>
                                    }

                                    <td>
                                        <a href="#" class="delete" title="Delete" data-id="@item.id" data-toggle="tooltip"><i class="icon icon-remove"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="clearfix">
                        <div>
                            @Html.PagedListPager(Model, page => Url.Action("Index",
                                new { page, search = ViewBag.search }))
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
    </body>
</html>


