@using Coffee_62134455.Models;
@model DonHangs_62134455
@{
    ViewBag.Title = "Index";
}

<style>
    .note-field {
        text-align: start!important;
        font-size: 11pt;
        padding: 10px !important;
    }
</style>

<section class="ftco-section ftco-cart">
    <div class="container">
        <div class="row">
            <div class="col-md-12 ftco-animate">
                <div class="cart-list">
                    <table class="table">
                        <thead class="thead-primary">
                            <tr class="text-center">
                                <th style="width:5%">&nbsp;</th>
                                <th style="width:10%">&nbsp;</th>
                                <th>Sản phẩm</th>
                                <th style="width:10%">Giá</th>
                                <th style="width:10%">Size</th>
                                <th style="width:10%">Số lượng</th>
                                <th style="width:15%">Thành tiền</th>
                                <th style="width:20%">Ghi chú</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                decimal TongTienHoaDon = 0;
                                decimal PhiVanChuyen = 0;
                            }
                            @foreach (var item in Model.ChiTietDonHangs_62134455)
                            {

                                <tr class="text-center">
                                    <td class="product-remove"><a href="#"><span class="icon-close"></span></a></td>

                                    <td class="image-prod"><div class="img" width="30" style="background-image:url(/Assets/images/@item.SanPhams_62134455.HinhAnh);"></div></td>

                                    <td class="">
                                        <h3>@item.SanPhams_62134455.TenSanPham</h3>
                                        <p>@item.SanPhams_62134455.MoTa</p>
                                    </td>

                                    <td class="">@string.Format("{0:#,###}", item.DonGia) ₫</td>
                                    <td class="size">@item.Size</td>

                                    <td class="">
                                        <div class="input-group mb-3">

                                            <input type="number" name="SoLuong" class="form-control input-number" value="@item.SoLuong" min="1">
                                        </div>
                                    </td>


                                    <td class="">@string.Format("{0:#,###}", item.SoLuong * item.DonGia) ₫</td>

                                    <td class="ghi-chu">
                                        <div class="input-group mb-3">
                                            <input type="text" name="GhiChu" class="form-control note-field" value="@item.GhiChu">
                                        </div>
                                    </td>
                                </tr><!-- END TR-->

                                TongTienHoaDon += (item.SoLuong * item.DonGia.Value);

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row justify-content-end">
            <div class="col col-lg-4 col-md-6 mt-5 cart-wrap ftco-animate">
                <div class="cart-total mb-3">
                    <h3>Tổng hóa đơn</h3>
                    <p class="d-flex">
                        <span>Tổng tiền</span>
                        <span>@string.Format("{0:#,###}", TongTienHoaDon) ₫</span>
                    </p>
                    <p class="d-flex">
                        <span>Phí vận chuyển</span>
                        @if (TongTienHoaDon > 300000)
                        {

                            <span>Miễn phí</span>
                        }
                        else
                        {
                            PhiVanChuyen = 30000;

                            <span>@string.Format("{0:#,###}", PhiVanChuyen) ₫</span>
                        }
                    </p>
                    <hr>
                    <p class="d-flex total-price">
                        <span>Cần trả</span>
                        <span>@string.Format("{0:#,###}", TongTienHoaDon + PhiVanChuyen) ₫</span>
                    </p>
                </div>
                <p class="text-center"><a href="/GioHang_62134455/ThanhToan" class="btn btn-primary py-3 px-4">Đặt hàng</a></p>
            </div>
        </div>
    </div>
</section>

