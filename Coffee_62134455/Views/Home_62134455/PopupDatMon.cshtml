<script>
    $(document).ready(function () {
        $('.themSoLuong').click(function () {
            $('#modal input[name="SoLuong"]').val(Number($('#modal input[name="SoLuong"]').val()) + 1);
        })
        $('.giamSoLuong').click(function () {
            if ($('#modal input[name="SoLuong"]').val() > 1) {
                $('#modal input[name="SoLuong"]').val(Number($('#modal input[name="SoLuong"]').val()) - 1);
            }
        })
    })
</script>
